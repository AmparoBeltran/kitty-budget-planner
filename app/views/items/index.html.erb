<main class="container">
  <div class="header">
    <h1>Items</h1>
    <%= link_to "New item",
      new_item_path,
      class: "btn btn--primary",
      data: { turbo_frame: dom_id(Item.new) }   
    %>
  </div>
  
  <%= turbo_frame_tag Item.new %>
  
  <%= turbo_frame_tag "items" do %>
    <%= render @items %>
  <% end %>

  <%= turbo_frame_tag "budget_summary" do %>
    <%= render "summaries/show", items: @items %>
  <% end %>
</main>